<%= form_tag(lessons_path, method: :get) do %>
  <%= text_field_tag :term, params[:term] %>
  <%= submit_tag 'Search', name: nil %>
<% end %>
<h1>Lessons</h1>

<ul>
  <% @lessons.each do |lesson| %>
    <li><%= lesson.number %> <%= link_to lesson.name, lesson_path(lesson) %></li>
  <% end %>
</ul>
<hr>
<%= link_to "New Lesson", new_lesson_path %>
